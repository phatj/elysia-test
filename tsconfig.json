{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "noImplicitAny": false,
    "noLib": false,
    "outDir": "./dist",
    "paths": {
      "@/*": ["./lib/*"],
      "~/*": ["./src/*"]
    },
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "target": "es2018",
    "types": ["bun-types"],
  },
  "include": ["src", "lib"],
  "exclude": ["node_modules"],
}
